#include<iostream>
#include<cmath>
#include<bits/stdc++.h>
#include<stdio.h>


using namespace std;

#define pi acos(-1)

int main()
{
	double radius,n;

	while(scanf("%lf %lf",&radius,&n)==2){

		double a,height,halfa,area_triangle,total_area,cone_center,cone_radial;

		cone_radial = ((2*pi)/n)/2;
		
		a = radius*sin(2*pi/n)/2;

		area_triangle = n*radius*a;

		printf("%0.3lf\n",area_triangle);

	}	
	return 0;

}
